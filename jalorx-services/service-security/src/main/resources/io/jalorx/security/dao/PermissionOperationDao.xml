<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.jalorx.security.dao.PermissionOperationDao">

	<!-- <cache /> -->
	
	<!-- ///////////////////////////基础接口定义///////////////////////////////// -->
	
	 <resultMap id="PermissionOperationResultMap" type="io.jalorx.entity.PermissionOperation">
	    <!--
	       	自动生成
	    -->
        <id property="id" column="ID" jdbcType="BIGINT" />
        <result property="code" column="CODE" jdbcType="VARCHAR" />
        <result property="status" column="STATUS" jdbcType="INTEGER" />        
        <result property="desc" column="DESP" jdbcType="VARCHAR" />
        <result property="parentId" column="PARENT_ID" jdbcType="BIGINT" />
        
        <result property="revision" column="REVISION" jdbcType="INTEGER" />
	    <result property="createDate" jdbcType="TIMESTAMP" column="CREATE_DATE"/>
	    <result property="lastUpdateDate" jdbcType="TIMESTAMP" column="LAST_UPDATE_DATE" />
	</resultMap>
	

	<select id="getById" resultMap="PermissionOperationResultMap">
		SELECT
		T.*
		FROM tpl_perm_oper_t T
		WHERE T.ID = #{id}
	</select>
	
	
	<select id="getByIds" resultMap="PermissionOperationResultMap">
		SELECT
		T.*
		FROM tpl_perm_oper_t T
		WHERE T.ID in
		<foreach item="id" collection="ids" open="(" separator="," close=")">
		  #{id}
		</foreach>
	</select>

	<select id="getCount" resultType="int">
		SELECT
		count(1)
		FROM tpl_perm_oper_t T
		<filter open="where (" close=")" />
	</select>

	<select id="selectAll" resultMap="PermissionOperationResultMap">
		SELECT
		T.*
		FROM tpl_perm_oper_t T
		<filter open="where (" close=")" />
	</select>

	<select id="select" pageable="true" resultMap="PermissionOperationResultMap">
		SELECT T.* FROM tpl_perm_oper_t T
		<filter open="where (" close=")" />
		ORDER BY T.ID
	</select>
	
	<!-- 插入语句  -->
	<sql id="base_insert_sql">
		INSERT INTO tpl_perm_oper_t (
			<if test="id != null">ID,</if>CODE,
			STATUS,
			DESP,
			PARENT_ID,
			REVISION,
			CREATE_DATE,
			LAST_UPDATE_DATE,
			TENANT_ID,
	        APP_NAME,
	        APP_SCOPE
		  ) VALUES (
			<if test="id != null">#{id,jdbcType=NUMERIC},</if>#{code,jdbcType=VARCHAR},
			#{status,jdbcType=INTEGER},
			#{desc,jdbcType=VARCHAR},
			#{parentId,jdbcType=NUMERIC}, 
			1,
	        #{_currentDate},
	        #{_currentDate},
	        #{tenantId,jdbcType=VARCHAR},
	        #{appName,jdbcType=VARCHAR},
	        #{appScope,jdbcType=VARCHAR}
		  )
	</sql>

	<insert id="insert" parameterType="io.jalorx.entity.PermissionOperation" useGeneratedKeys="true" keyColumn="ID" keyProperty="id">
		<selectKey resultType="long" keyProperty="id" order="BEFORE" databaseId="oracle">
        	SELECT tpl_perm_oper_S.NEXTVAL AS value FROM dual  
		</selectKey>
		<include refid="base_insert_sql" />
	</insert>

	<delete id="deleteById">
		DELETE FROM tpl_perm_oper_t
		WHERE ID = #{id}
	</delete>
	
	<delete id="deleteByIds">
		DELETE FROM tpl_perm_oper_t
		WHERE ID in
	    <foreach item="id" collection="ids" open="(" separator="," close=")">
	     #{id}
	    </foreach>
	</delete>
	
	<delete id="deleteByRescode">
		DELETE FROM tpl_perm_oper_t
		WHERE PARENT_ID in(
			SELECT ID FROM tpl_perm_resource_t
			WHERE APP_CODE = #{appCode} and CODE in
			<foreach item="id" collection="rids" open="(" separator="," close=")">
		     #{id}
		    </foreach>
		)
	</delete>

</mapper>

