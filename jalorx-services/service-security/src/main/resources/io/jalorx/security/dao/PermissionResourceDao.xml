<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.jalorx.security.dao.PermissionResourceDao">

	<!-- <cache /> -->
	
	<!-- ///////////////////////////基础接口定义///////////////////////////////// -->
	
	 <resultMap id="PermissionResourceResultMap" type="io.jalorx.boot.entity.PermissionResource">
	    <!--
	       	自动生成
	    -->
        <id property="id" column="ID" jdbcType="BIGINT" />
        <result property="code" column="CODE" jdbcType="VARCHAR" />
        <result property="status" column="STATUS" jdbcType="INTEGER" />        
        <result property="desc" column="DESP" jdbcType="VARCHAR" />
        
        <result property="appCode" column="APP_CODE" jdbcType="VARCHAR" />
        <result property="appName" column="APP_NAME" jdbcType="VARCHAR" />
        
        <result property="revision" column="REVISION" jdbcType="INTEGER" />
	    <result property="createDate" jdbcType="TIMESTAMP" column="CREATE_DATE"/>
	    <result property="lastUpdateDate" jdbcType="TIMESTAMP" column="LAST_UPDATE_DATE" />
	</resultMap>
	

	<select id="getById" resultMap="PermissionResourceResultMap">
		SELECT
		T.*
		FROM tpl_perm_resource_t T
		WHERE T.ID = #{id}
	</select>
	
	
	<select id="getByIds" resultMap="PermissionResourceResultMap">
		SELECT
		T.*
		FROM tpl_perm_resource_t T
		WHERE T.ID in
		<foreach item="id" collection="ids" open="(" separator="," close=")">
		  #{id}
		</foreach>
	</select>

	<select id="getCount" resultType="int">
		SELECT
		count(1)
		FROM tpl_perm_resource_t T
		<filter open="where (" close=")" />
	</select>

	<select id="selectAll" resultMap="PermissionResourceResultMap">
		SELECT
		T.*
		FROM tpl_perm_resource_t T
		<filter open="where (" close=")" />
	</select>

	<select id="select" pageable="true" resultMap="PermissionResourceResultMap">
		SELECT T.* FROM tpl_perm_resource_t T
		<filter open="where (" close=")" />
		ORDER BY T.ID
	</select>
	
	<!-- 插入语句  -->
	<sql id="base_insert_sql">
		INSERT INTO tpl_perm_resource_t (
			<if test="id != null">ID,</if>CODE,
			STATUS,
			DESP,			
			REVISION,
			CREATE_DATE,
			LAST_UPDATE_DATE,
			TENANT_ID,
	        APP_NAME,
	        APP_CODE,
	        APP_SCOPE
		  ) VALUES (
			<if test="id != null">#{id,jdbcType=NUMERIC},</if>#{code,jdbcType=VARCHAR},
			#{status,jdbcType=INTEGER},
			#{desc,jdbcType=VARCHAR},
			1,
	        #{_currentDate},
	        #{_currentDate},
	        #{tenantId,jdbcType=VARCHAR},
	        #{appName,jdbcType=VARCHAR},
	        #{appCode,jdbcType=VARCHAR},
	        #{appScope,jdbcType=VARCHAR}
		  )
	</sql>

	<insert id="insert" parameterType="io.jalorx.boot.entity.PermissionOperation" useGeneratedKeys="true" keyColumn="ID" keyProperty="id">
		<selectKey resultType="long" keyProperty="id" order="BEFORE" databaseId="oracle">
        	SELECT tpl_perm_resource_S.NEXTVAL AS value FROM dual  
		</selectKey>
		<include refid="base_insert_sql" />
	</insert>

	<delete id="deleteById">
		DELETE FROM tpl_perm_resource_t
		WHERE ID = #{id}
	</delete>
	
	<delete id="deleteByIds">
		DELETE FROM tpl_perm_resource_t
		WHERE ID in
	    <foreach item="id" collection="ids" open="(" separator="," close=")">
	     #{id}
	    </foreach>
	</delete>
	
	<delete id="deleteByRescode">
		DELETE FROM tpl_perm_resource_t
		WHERE APP_CODE = #{appCode} and CODE in
	    <foreach item="id" collection="rids" open="(" separator="," close=")">
	     #{id}
	    </foreach>
	</delete>
	
	<resultMap type="java.util.HashMap" id="permissionMap">
		<result property="code" column="CODE" />
		<result property="desc" column="DESP" />
		<result property="parent_code" column="PARENT_CODE" />
		<result property="app_code" column="APP_CODE" />
	</resultMap>

	<select id="getAllPermission" resultMap="permissionMap">
		SELECT * FROM (
			SELECT
				t.CODE, t.DESP,
				p.CODE AS PARENT_CODE,
				P.APP_CODE
			FROM
				tpl_perm_oper_t t
			LEFT JOIN tpl_perm_resource_t p ON t.PARENT_ID = p.ID
			UNION
				SELECT
					pp.CODE, pp.DESP,
					'Jalor' AS PARENT_CODE,
					pp.APP_CODE
				FROM
					tpl_perm_resource_t pp
		 ) a
	   ORDER BY a.APP_CODE, a.PARENT_CODE, a.CODE
	</select>

</mapper>

